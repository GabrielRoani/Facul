@model acessa_dev_web.Models.Ocorrencia
@{
    ViewData["Title"] = "Detalhes da Ocorrência";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/ocorrencias.css" />
}

<div class="container">
    <div class="page-header">
        <h1 class="page-title">Detalhes da Ocorrência</h1>
        <p class="page-subtitle">Visualize os detalhes completos da ocorrência</p>
    </div>

    <div class="crud-container">
        <div class="details-card">
            <div class="details-section">
                <h3 class="details-title">Informações da Ocorrência</h3>
                <div class="details-grid">
                    <div class="detail-item">
                        <label class="detail-label">Descrição:</label>
                        <span class="detail-value">@Model.DescricaoOcorrencia</span>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">Categoria:</label>
                        <span class="detail-value">
                            <span class="categoria-badge">@Model.Categoria</span>
                        </span>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">Severidade:</label>
                        <span class="detail-value">
                            <span class="status-badge prioridade-@Model.Severidade.ToString().ToLower()">
                                @Model.Severidade
                            </span>
                        </span>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">Status:</label>
                        <span class="detail-value">
                            <span class="status-badge status-@Model.Status.ToString().ToLower().Replace(" ", "-")">
                                @Model.Status
                            </span>
                        </span>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">Data:</label>
                        <span class="detail-value">@Model.Data.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">Local:</label>
                        <span class="detail-value">@Model.Local?.Endereco</span>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">Usuário:</label>
                        <span class="detail-value">@Model.Usuario?.Nome</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-actions">
            <a href="@Url.Action("Edit", new { id = Model.idOcorrencia })" class="btn btn-secondary">Editar</a>
            <a href="@Url.Action("Index")" class="btn btn-outline">Voltar para a Lista</a>
        </div>
    </div>
</div>

<style>
    .details-card {
        background: var(--fundo-principal);
        border-radius: var(--borda-radius);
        padding: 2rem;
        margin-bottom: 1.5rem;
    }

    .details-section {
        margin-bottom: 2rem;
    }

    .details-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--texto-principal);
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--fundo-secundario);
    }

    .details-grid {
        display: grid;
        gap: 1rem;
    }

    .detail-item {
        display: flex;
        align-items: flex-start;
        padding: 1rem;
        background: var(--fundo-secundario);
        border-radius: var(--borda-radius);
    }

    .detail-label {
        font-weight: 600;
        color: var(--texto-principal);
        min-width: 120px;
        margin-right: 1rem;
    }

    .detail-value {
        color: var(--texto-secundario);
        flex: 1;
    }
</style>