@model acessa_dev_web.Models.Ocorrencia
@{
    ViewData["Title"] = "Nova Ocorrência";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/ocorrencias.css" />
    <link rel="stylesheet" href="~/css/crud-styles.css" /> 
}

<div class="container">
    <div class="page-header">
        <h1 class="page-title">Nova Ocorrência</h1>
        <p class="page-subtitle">Registre uma nova ocorrência de acessibilidade</p>
    </div>

    <div class="crud-container">
        <form asp-action="Create" class="modal-form" id="ocorrenciaForm">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="DescricaoOcorrencia" class="form-label">Descrição *</label>
                <textarea asp-for="DescricaoOcorrencia" class="form-control" rows="4" required maxlength="500" placeholder="Descreva detalhes sobre a ocorrência..."></textarea>
                <span asp-validation-for="DescricaoOcorrencia" class="validation-error"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Categoria" class="form-label">Categoria *</label>
                    <select asp-for="Categoria" class="form-control" required>
                        <option value="">Selecione...</option>
                        <option value="0">Iluminação</option>
                        <option value="1">Pavimentação Tátil</option>
                        <option value="2">Sanitários com Acessibilidade</option>
                        <option value="3">Rampas de Acesso</option>
                        <option value="4">Calçadas rebaixadas</option>
                        <option value="5">Elevadores</option>
                    </select>
                    <span asp-validation-for="Categoria" class="validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Severidade" class="form-label">Severidade *</label>
                    <select asp-for="Severidade" class="form-control" required>
                        <option value="">Selecione...</option>
                        <option value="0">Alta</option>
                        <option value="1">Média</option>
                        <option value="2">Baixa</option>
                    </select>
                    <span asp-validation-for="Severidade" class="validation-error"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Status" class="form-label">Status *</label>
                    <select asp-for="Status" class="form-control" required>
                        <option value="">Selecione...</option>
                        <option value="0">Funcional</option>
                        <option value="1">Não Funcional</option>
                        <option value="2">Inexistente</option>
                    </select>
                    <span asp-validation-for="Status" class="validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Data" class="form-label">Data *</label>
                    <input type="datetime-local" asp-for="Data" class="form-control" required>
                    <span asp-validation-for="Data" class="validation-error"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="idLocal" class="form-label">Nome do Local *</label>
                    <select asp-for="idLocal" asp-items="ViewBag.idLocal" class="form-control" required>
                        <option value="">Selecione um local...</option>
                    </select>
                    <span asp-validation-for="idLocal" class="validation-error"></span>
                </div>

                <!--Dados do Local-->

                <div class="form-group">
                    <label for="Nome">Nome Fantasia *</label>
                    <input type="text" name="Nome" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Endereco">Endereço *</label>
                    <input type="text" name="Endereco" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Latitude">Latitude *</label>
                    <input type="number" step="any" name="Latitude" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Longitude">Longitude *</label>
                    <input type="number" step="any" name="Longitude" class="form-control" required />
                </div>

               <!-- <div class="form-group">
                    <label asp-for="idUsuario" class="form-label">Usuário *</label>
                    <select asp-for="idUsuario" asp-items="ViewBag.idUsuario" class="form-control" required>
                        <option value="">Selecione um usuário...</option>
                    </select>
                    <span asp-validation-for="idUsuario" class="validation-error"></span>
                </div>-->

            </div>

            <div class="form-group">
                <label class="form-label">Usuário *</label>
                <input type="text" class="form-control" value="@ViewBag.UsuarioNome" disabled />
                <input type="hidden" asp-for="idUsuario" value="@ViewBag.UsuarioId" />
                <span asp-validation-for="idUsuario" class="validation-error"></span>
            </div>

            <div class="modal-actions">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Salvar Ocorrência</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/ocorrencias.js"></script>
    <script>
        // Torna os dados dos locais disponíveis para o JS
        window.locaisData = @Html.Raw(ViewBag.LocaisJson ?? "[]");
    </script>
}