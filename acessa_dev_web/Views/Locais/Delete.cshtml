@model acessa_dev_web.Models.Local

@{
    ViewData["Title"] = "Excluir Local";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/acessibilidade.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/local-styles.css" asp-append-version="true" />
}

<div class="container">

    <div class="page-header">
        <h1 class="page-title">Excluir Local</h1>
        <p class="page-subtitle" style="color: var(--cor-erro); font-weight: 600;">Você tem certeza que deseja excluir este registro?</p>
    </div>

    <div class="crud-container">

        <h3 style="margin-bottom: 2rem; border-bottom: 1px solid var(--fundo-secundario); padding-bottom: 1rem;">
            As informações a seguir serão permanentemente removidas:
        </h3>

        <dl class="details-list details-grid">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Endereco)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Endereco)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Latitude)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Latitude)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Longitude)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Longitude)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="idLocal" />

            <div class="action-buttons">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <script src="~/js/acessibilidade.js" asp-append-version="true"></script>
}