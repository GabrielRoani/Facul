@model acessa_dev_web.Models.Local

@{
    ViewData["Title"] = "Adicionar Novo Local";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/acessibilidade.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/local-styles.css" asp-append-version="true" />
}

<div class="container">

    <div class="page-header">
        <h1 class="page-title">Adicionar Novo Local</h1>
        <p class="page-subtitle">Preencha as informações abaixo para cadastrar um novo local.</p>
    </div>

    <div class="crud-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="validation-error"></div>

            <div class="form-group">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-input" placeholder="Ex: Biblioteca Central" />
                <span asp-validation-for="Nome" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Endereco" class="form-label"></label>
                <input asp-for="Endereco" class="form-input" placeholder="Ex: Av. Principal, 123" />
                <span asp-validation-for="Endereco" class="validation-error"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Latitude" class="form-label"></label>
                    <input asp-for="Latitude" class="form-input" placeholder="-23.550520" />
                    <span asp-validation-for="Latitude" class="validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Longitude" class="form-label"></label>
                    <input asp-for="Longitude" class="form-input" placeholder="-46.633308" />
                    <span asp-validation-for="Longitude" class="validation-error"></span>
                </div>
            </div>

            <div class="action-buttons">
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/acessibilidade.js" asp-append-version="true"></script>
}