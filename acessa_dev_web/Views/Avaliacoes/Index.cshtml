@model IEnumerable<acessa_dev_web.Models.Avaliacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoAvaliacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorAvaliacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoAvaliacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorAvaliacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Local.Endereco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idAvaliacao">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idAvaliacao">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idAvaliacao">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
