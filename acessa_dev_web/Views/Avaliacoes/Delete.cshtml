@model acessa_dev_web.Models.Avaliacao
@{
    ViewData["Title"] = "Excluir Avaliação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/avaliacoes.css" />
}

<div class="container">
    <div class="page-header">
        <h1 class="page-title">Excluir Avaliação</h1>
        <p class="page-subtitle">Confirme a exclusão desta avaliação</p>
    </div>

    <div class="crud-container">
        <div class="alert alert-warning">
            <h3>⚠️ Atenção!</h3>
            <p>Você está prestes a excluir esta avaliação. Esta ação não pode ser desfeita.</p>
        </div>

        <div class="details-card">
            <div class="details-section">
                <h3 class="details-title">Informações da Avaliação</h3>
                <div class="details-grid">
                    <div class="detail-item">
                        <label class="detail-label">Descrição:</label>
                        <span class="detail-value">@Model.DescricaoAvaliacao</span>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">Nota:</label>
                        <span class="detail-value rating-display">
                            @for (int i = 0; i < Model.ValorAvaliacao; i++)
                            {
                                <text>★</text>
                            }
                            @for (int i = Model.ValorAvaliacao; i < 5; i++)
                            {
                                <text>☆</text>
                            }
                        </span>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">Data:</label>
                        <span class="detail-value">@Model.Data.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">Local:</label>
                        <span class="detail-value">@Model.Local?.Endereco</span>
                    </div>
                    <div class="detail-item">
                        <label class="detail-label">Usuário:</label>
                        <span class="detail-value">@Model.Usuario?.Nome</span>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="modal-form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="idAvaliacao" />

            <div class="modal-actions">
                <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<style>
    .alert {
        padding: 1.5rem;
        border-radius: var(--borda-radius);
        margin-bottom: 1.5rem;
    }

    .alert-warning {
        background-color: rgba(255, 214, 10, 0.1);
        border: 1px solid var(--cor-alerta);
        color: var(--texto-principal);
    }

    .alert h3 {
        margin-top: 0;
        color: var(--cor-alerta);
    }

    .details-card {
        background: var(--fundo-principal);
        border-radius: var(--borda-radius);
        padding: 2rem;
        margin-bottom: 1.5rem;
        border: 1px solid var(--cor-erro);
    }

    .details-section {
        margin-bottom: 2rem;
    }

    .details-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--texto-principal);
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--fundo-secundario);
    }

    .details-grid {
        display: grid;
        gap: 1rem;
    }

    .detail-item {
        display: flex;
        align-items: flex-start;
        padding: 1rem;
        background: var(--fundo-secundario);
        border-radius: var(--borda-radius);
    }

    .detail-label {
        font-weight: 600;
        color: var(--texto-principal);
        min-width: 120px;
        margin-right: 1rem;
    }

    .detail-value {
        color: var(--texto-secundario);
        flex: 1;
    }
</style>