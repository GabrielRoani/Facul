@model acessa_dev_web.Models.Avaliacao
@{
    ViewData["Title"] = "Nova Avaliação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/avaliacoes.css" />
    <link rel="stylesheet" href="~/css/crud-styles.css" />
}

<div class="container">
    <div class="page-header">
        <h1 class="page-title">Nova Avaliação</h1>
        <p class="page-subtitle">Adicione uma nova avaliação de acessibilidade</p>
    </div>

    <div class="crud-container">
        <form asp-action="Create" class="modal-form">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="DescricaoAvaliacao" class="form-label">Descrição *</label>
                <textarea asp-for="DescricaoAvaliacao" class="form-control" rows="4" required maxlength="500" placeholder="Descreva detalhes sobre a acessibilidade do local..."></textarea>
                <span asp-validation-for="DescricaoAvaliacao" class="validation-error"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="ValorAvaliacao" class="form-label">Nota *</label>
                    <div class="rating-stars" id="ratingStars">
                        <span class="star" data-value="1">★</span>
                        <span class="star" data-value="2">★</span>
                        <span class="star" data-value="3">★</span>
                        <span class="star" data-value="4">★</span>
                        <span class="star" data-value="5">★</span>
                    </div>
                    <input type="hidden" asp-for="ValorAvaliacao" id="valorAvaliacao" required>
                    <span asp-validation-for="ValorAvaliacao" class="validation-error"></span>
                    <small class="form-hint">Clique nas estrelas para dar a nota</small>
                </div>
                <div class="form-group">
                    <label asp-for="Data" class="form-label">Data *</label>
                    <input type="datetime-local" asp-for="Data" class="form-control" required>
                    <span asp-validation-for="Data" class="validation-error"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="idLocal" class="form-label">Nome do Local *</label>
                    <select asp-for="idLocal" asp-items="ViewBag.idLocal" class="form-control" required>
                        <option value="">Selecione um local...</option>
                    </select>
                    <span asp-validation-for="idLocal" class="validation-error"></span>
                </div>

                <!--Dados do Local-->

                <div class="form-group">
                    <label for="Nome">Nome Fantasia *</label>
                    <input type="text" name="Nome" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Endereco">Endereço *</label>
                    <input type="text" name="Endereco" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Latitude">Latitude *</label>
                    <input type="number" step="any" name="Latitude" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Longitude">Longitude *</label>
                    <input type="number" step="any" name="Longitude" class="form-control" required />
                </div>


                <!-- Mostra o usuário logado (somente leitura, não enviado no form) 
                <div class="form-group">
                    <label class="form-label">Usuário</label>
                    <input type="text" class="form-control" value="@User.Identity.Name" readonly />
                </div>
                </div>-->

            <div class="form-group">
                <label class="form-label">Usuário *</label>
                <input type="text" class="form-control" value="@ViewBag.UsuarioNome" disabled />
                <input type="hidden" asp-for="idUsuario" value="@ViewBag.UsuarioId" />
                <span asp-validation-for="idUsuario" class="validation-error"></span>
            </div>

            <div class="modal-actions">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Salvar Avaliação</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/avaliacoes.js"></script>
    <script>
        // Torna os dados dos locais disponíveis para o JS
        window.locaisData = @Html.Raw(ViewBag.LocaisJson ?? "[]");
    </script>
}
