@model acessa_dev_web.Models.HomeDashboardViewModel
@using acessa_dev_web.Models
@using System.Security.Claims

@{
    ViewData["Title"] = "Dashboard - Acessa+";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true">
</head>
<body>

    <main class="main-content">
        <aside class="sidebar">
            <section class="sidebar-section">
                <h3 class="sidebar-title">Suas Contribuições</h3>
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-value">@Model.Stats.TotalOcorrencias</div>
                        <div class="stat-label">Ocorrências</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">@Model.Stats.TotalAvaliacoes</div>
                        <div class="stat-label">Avaliações</div>
                    </div>
                </div>
            </section>

            <section class="sidebar-section">
                <h3 class="sidebar-title">Gerenciamento</h3>
                <div class="management-menu">
                    <a asp-controller="Ocorrencias" asp-action="Index" class="management-link">
                        Gerenciar Ocorrências
                    </a>
                    <a asp-controller="Avaliacoes" asp-action="Index" class="management-link">
                        Gerenciar Avaliações
                    </a>
                    <a asp-controller="Locais" asp-action="Index" class="management-link">
                        Gerenciar Locais
                    </a>
                </div>
            </section>
        </aside>
        <div class="content-area">
            <section class="map-section">
                <div class="section-header">
                    <h2 class="section-title">Mapa Interativo</h2>
                    <a href="@Url.Action("Maps", "Home")" class="btn btn-primary" id="abrirMapa" style="margin: 0;">Ver Mapa Completo</a>
                </div>
                <div class="map-container">
                    <div id="mapDashboard" style="width: 100%; height: 100%;"></div>
                </div>
            </section>

            <section class="activity-section">
                <h2 class="section-title">Atividade Recente</h2>
                <div class="activity-list">

                    @if (Model.AtividadesRecentes != null && Model.AtividadesRecentes.Any())
                    {
                        @foreach (var atividade in Model.AtividadesRecentes)
                        {
                            <div class="activity-item">
                                <div class="activity-icon">@atividade.Icone</div>
                                <div class="activity-content">
                                    <p class="activity-title">@atividade.Titulo</p>
                                    <p class="activity-description">@atividade.Descricao</p>
                                    <p class="activity-time">@atividade.TempoDecorrido</p>
                                </div>
                                <span class="activity-status @atividade.StatusCssClass">@atividade.Status</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="activity-item">
                            <div class="activity-content">
                                <p class="activity-description">Nenhuma atividade recente para mostrar.</p>
                                <p class="activity-time">Comece adicionando uma ocorrência ou avaliação!</p>
                            </div>
                        </div>
                    }

                </div>
            </section>

        </div>
    </main>

    <button class="fab" title="Nova ocorrência rápida">
        ➕
    </button>

    <script src="~/js/home-dashboard.js" asp-append-version="true"></script>
</body>
</html>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/ol/dist/ol.js"></script>
}