@model acessa_dev_web.Models.Usuario

@{
    ViewData["Title"] = "Remover Usuário";
}

<link rel="stylesheet" href="~/css/crud-styles.css" asp-append-version="true" />

<div class="crud-container">
    <h1>Remover Usuário</h1>
    <h3 style="text-align: center; color: #e74c3c;">Tem certeza que deseja remover este registro?</h3>

    <hr>

    <div class="details-group">
        <label class="details-label">@Html.DisplayNameFor(model => model.Nome)</label>
        <div class="details-value">@Html.DisplayFor(model => model.Nome)</div>
    </div>

    <div class="details-group">
        <label class="details-label">@Html.DisplayNameFor(model => model.Perfil)</label>
        <div class="details-value">@Html.DisplayFor(model => model.Perfil)</div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <div class="action-buttons">
            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            <input type="submit" value="Confirmar Remoção" class="btn btn-danger" />
        </div>
    </form>
</div>