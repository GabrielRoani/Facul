@model acessa_dev_web.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="crud-container">
    <h1>Editar Usuário</h1>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="id" />

        <div class="form-group">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Senha" class="form-label"></label>
            <input asp-for="Senha" class="form-control" type="password" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Perfil" class="form-label"></label>
            <select asp-for="Perfil" class="form-control">
                <option value="Cidadao">Cidadão</option>
                <option value="Gestor">Gestor Público</option>
                <option value="Admin">Administrador Sistema</option>
            </select>
            <span asp-validation-for="Perfil" class="text-danger"></span>
        </div>

        <div class="action-buttons">
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            <input type="submit" value="Salvar" class="btn btn-success" />
        </div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/crud-styles.css" asp-append-version="true" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}